<% if user_signed_in? %>
    <h1>Hi,<%= current_user.email %></h1>
    
    <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#newPostModal">
    Add Post
    </button>
    <!-- Modal -->
    <div class="modal fade" id="newPostModal" tabindex="-1" role="dialog" aria-labelledby="newPostModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="newPostModalLabel">Add Posts</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
          </div>
      <!--<div id="#newPostForm"> -->
         <%= render partial:"posts/form"%>
        </div>
      </div>
    </div>
    <%= link_to 'All Post', posts_path, class: "btn btn-primary btn-lg"%>
    <%=link_to "edit-profile",edit_user_registration_path,class: "btn btn-primary btn-lg"%>
<%else%>
<h1>Please signIn</h1>
<%end%>
        
   
